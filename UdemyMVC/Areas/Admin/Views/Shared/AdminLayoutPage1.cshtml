<!DOCTYPE html>
 
<html>
<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/fontawesome.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/downloaded/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.6.4.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/jquery-3.6.4.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>

    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        .field-validation-error {
            color: red;
        }

        .validation-summary-errors {
            color: red;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark ">
        <a class="navbar-brand mx-3" href="#">Admin</a>
        <ul class="nav navbar-nav me-auto">
            <li class="nav-item active">
                <a class="nav-link" data-toggle="tab" href="/Admin/home/index">Home</a>
            </li>
           
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="/Admin/Users/Index">Users</a>
            </li>

            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Products
                </a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="/Admin/Products/Index">Products</a></li>
                    <li><a class="dropdown-item" href="/Admin/Categories/Index">Categories</a></li>
                    <li><a class="dropdown-item" href="/Admin/Brand/Index">Brands</a></li>

                    <li><hr class="dropdown-divider"></li>

                    <li><a class="dropdown-item" href="/Admin/Products/SearchProduct">Search Product</a></li>
                    <li><a class="dropdown-item" href="/Admin/Products/Create">Create Product</a></li>
                </ul>
            </li>

            @if (User.Identity.IsAuthenticated == true)
            {
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="/Account/Logout">Logout</a>
                </li>
            }
        </ul>

        @if (User.Identity.IsAuthenticated == true)
        {
            <div class=" text-white mx-auto">
                Welcome, @User.Identity.Name
            </div>
        }

    </nav>

    <div class="row p-4">
        @RenderBody()
    </div>
</body>
</html>
