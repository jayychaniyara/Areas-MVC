@model Company.DomainModels.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage1.cshtml";

}

<form action="/Admin/Products/Delete/@Model.ProductID" class="mt-4" method="post">

    <div class="form-row row">
        <div class="form-group col-md-6">
            <label for="ProductName" class="m-2">Are you sure you want to delete <b>"@Model.ProductName"</b> ?</label>
            <input type="hidden" name="ProductID" value="@Model.ProductID" />
        </div>
        <div class="form-group col-md-6">
            <td><img src="data:image;base64,@Model.Photo" width="200px" /></td>
        </div>
    </div>

    <button type="submit" class="btn btn-danger m-2">Delete</button>
    <a class="btn btn-dark" href="/Admin/Products/Index">Cancel</a>

</form>