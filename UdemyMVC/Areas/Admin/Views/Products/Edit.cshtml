@model Company.DomainModels.Product
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage1.cshtml";

}

<form action="/Admin/Products/Edit/@Model.ProductID" method="post" enctype="multipart/form-data">
    <div class="form-row row p-2">
        <div class="form-group col-md-6">
            <label for="ProductName">Product Name</label>
            <input type="hidden" name="ProductID" value="@Model.ProductID" />
            <input type="text" class="form-control" id="ProductName" name="ProductName" placeholder="Product Name" value="@Model.ProductName" />
        </div>

        <div class="form-group col-md-6">
            <label for="DateOfPurchase">Date Of Purchase</label>
            <input type="date" class="form-control" id="DateOfPurchase" name="DateOfPurchase" placeholder="Date Of Purchase" value="@Model.DateOfPurchase.Value.ToString("yyyy-MM-dd")" />
        </div>
    </div>

    <div class="form-row row p-2">
        <div class="form-group col-md-6">
            <label for="AvailablityStatus">Availablity Status</label>
            <select class="form-control" id="AvailablityStatus" name="AvailablityStatus">
                @if (ViewBag.AvailablityStatus != null)
                {
                    <option value="@ViewBag.AvailablityStatus">@ViewBag.AvailablityStatus</option>
                    <option value="InStock">In Stock</option>
                    <option value="OutOfStock">Out of Stock</option>
                }
                else
                {
                    <option value="OutOfStock">Please Select</option>
                    <option value="InStock">In Stock</option>
                    <option value="OutOfStock">Out of Stock</option>
                }
            </select>
        </div>

        <div class="form-group col-md-6">
            <label for="CategoryId">Category</label>
            <select class="form-control" id="CategoryId" name="CategoryId">
                <option value="">Please Select</option>
                @foreach (var cat in ViewBag.Categories)
                {
                    if (@cat.CategoryId == Model.CategoryId)
                    {
                        <option value="@cat.CategoryId" selected="selected">@cat.CategoryName</option>
                    }
                    else
                    {
                        <option value="@cat.CategoryId">@cat.CategoryName</option>
                    }
                }
            </select>
        </div>
    </div>

    <div class="form-row row p-2">
        <div class="form-group col-md-6">
            <label for="BrandId">Brand</label>
            <select class="form-control" id="BrandId" name="BrandId">
                <option value="">Please Select</option>
                @foreach (var val in ViewBag.Brands)
                {
                    if (@val.BrandId == Model.BrandId)
                    {
                        <option value="@val.BrandId" selected="selected">@val.BrandName</option>
                    }
                    else
                    {
                        <option value="@val.BrandId">@val.BrandName</option>
                    }
                }
            </select>
        </div>

        <div class="form-group col-md-6">
            <label for="Image">Image</label>
            <input type="file" class="form-control" id="Image" name="Photo" value="@Model.Photo" />
        </div>
    </div>

    <div class="form-group p-2">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="Active" id="Active" checked="@Model.Active" value="true" />
            <input type="hidden" value="false" name="Active" />
            <label class="form-check-label" for="Active">
                Active
            </label>
        </div>
    </div>

    <button type="submit" class="btn btn-success m-2">Update</button>
    <a class="btn btn-dark" href="/Admin/Products/Index">Cancel</a>
</form>


<a href="/Admin/Products/Index" class="mt-3">Back to Products</a>